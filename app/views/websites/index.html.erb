<h1>Websites</h1>

<table>
	<thead>
		<tr>
			<th>URL</th>
			<th>Live</th>
			<th>Pinged</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	<%- @websites.each do |website| -%>
		<tr>
			<td><%= website.url %></td>
			<td><%= website.live %></td>
			<td><%= pretty_time website.ping %></td>
			<td>
				<%= link_to 'Ping', [:ping_now, website] %>
			</td>
		</tr>
	<%- end -%>
	</tbody>
</table>

<p>&nbsp;</p>
<p>&nbsp;</p>

